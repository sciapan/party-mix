@page "/"
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<div class="d-flex justify-content-center">
    <button class="btn btn-primary mx-2" @onclick="NavigateToRoomCreation">Create</button>
    <button class="btn btn-secondary mx-2" @onclick="NavigateToLogin">Login</button>
</div>

@code{
    private void NavigateToRoomCreation()
    {
        Navigation.NavigateTo("/CreateRoom");
    }

    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/Login");
    }
}